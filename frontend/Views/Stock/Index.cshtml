@model List<StockViewModel>

@{
    ViewData["Title"] = "Stocks";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Available Stocks</h1>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No stocks available at the moment.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Symbol</th>
                        <th>Company Name</th>
                        <th>Purchase</th>
                        <th>Comments</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stock in Model)
                    {
                        <tr>
                            <td><strong>@stock.Symbol</strong></td>
                            <td>@stock.CompanyName</td>
                            <td>$@stock.Purchase.ToString("N2")</td>
                            <td>
                                <span class="badge bg-info">@stock.Comments.Count</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@stock.Id" 
                                       class="btn btn-primary btn-sm">View Details</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
} 